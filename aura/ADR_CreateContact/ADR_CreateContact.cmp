<aura:component controller="ADR_ContactInsertAndDisplay" implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,force:lightningQuickAction" access="global" >
	
    <aura:attribute name ="objContact" type="Contact"  default="{'sobjectType' : 'Contact',
                                                                'Name':'',
                                                                'Last Name':'',
                                                                'Phone':'',
                                                                'Title':''}"/>
	
    <aura:attribute name="lstContact" type="Contact[]" />
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    
    
    <lightning:card title ="Create a new Contact">
        <lightning:input name="conName" label="Contact Name" value="{!v.objContact.Name}" />
    	<lightning:input name="conLastName" label="Contact Last Name" value="{!v.objContact.LastName}" />
    	<lightning:input name="conPhone" label="Phone" value="{!v.objContact.Phone}" />
        <lightning:input name="conTitle" label="Title" value="{!v.objContact.Title}" />
        <lightning:button variant="brand" label="Create Contact" onclick="{!c.createNewContact}"/>
    </lightning:card>

    
    
    <lightning:card title ="Contacts">
         <table class="slds-table slds-table--bordered slds-table--striped">
         	<thead>
                <tr >
                     <th scope="col" ><span class="slds-truncate">Name</span></th>
                    <th scope="col" ><span class="slds-truncate">Phone</span></th>
                    <th scope="col" ><span class="slds-truncate">Last Name</span></th>
                    <th scope="col" ><span class="slds-truncate">Title</span></th>
                </tr>
             </thead>
             <tbody>
             	<aura:iteration items="{!v.lstContact}" var="objContact">
                <tr>
                    <td>{!objContact.Name}</td>
                    <td>{!objContact.Phone}</td>
                    <td>{!objContact.LastName}</td>
                    <td>{!objContact.Title}</td>
                </tr>
                </aura:iteration>
             </tbody>
         </table>
    </lightning:card>
    
    
</aura:component>