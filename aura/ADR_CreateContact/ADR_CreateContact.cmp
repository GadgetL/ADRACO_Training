<aura:component controller="ADR_ContactInsertAndDisplay" implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction" access="global" >
	
    <aura:attribute name="objContact" type="Contact" default="{'sobjectType': 'Contact',
                                                               'LastName' : '',
                                                               'FirstName': '',
                                                               'Department': '',
                                                               'Email': ''}"/>
    
    
    <aura:attribute name="lstContact" type="Contact[]"/>
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    
    <lightning:card	 iconName="standard:contact" title="Create Contact"> 
     	
        <p> Please enter the information into the form below</p>
            
        <lightning:input name="conLastName" label="Contact First Name" value="{!v.objContact.LastName}" placeholder="e.g. Jones" />
        <lightning:input name="conFirstName" label="Contact Last Name" value="{!v.objContact.FirstName}" placeholder="e.g. Sam"/>
        <lightning:input name="conDepartment" label="Contact Department" value="{!v.objContact.Department}" placeholder="e.g. Operation" />
        <lightning:input name="conEmail" label="Contact Email" value="{!v.objContact.Email}" placeholder="e.g. example@adraco.com"/>
        <br/>
        <lightning:button variant="brand" label="New Contact" onclick="{!c.createNewContact}"/>
        
        
    </lightning:card>
    
   <lightning:card   iconName="standard:contact" title="Contact" >
        <table>
            <thead>
                <tr>
                    <th><lightning:icon class="iconCon" iconName="utility:identity" alternativeText="Connected" title="Connected" />Last Name</th>
                    <th><lightning:icon class="iconCon" iconName="utility:identity" alternativeText="Connected" title="Connected" />First Name</th>
                    <th><lightning:icon class="iconCon" iconName="utility:company" alternativeText="Connected" title="Connected" />Department</th>
                    <th><lightning:icon class="iconCon" iconName="utility:email" alternativeText="Connected" title="Connected" />Email</th>
                </tr>
            </thead>
            <tbody>
                <aura:iteration items="{!v.lstContact}" var="objContact">
                    <tr>
                        <td>{!objContact.LastName}</td>
                        <td>{!objContact.FirstName}</td>
                        <td>{!objContact.Department}</td>
                        <td>{!objContact.Email}</td>
                    </tr>
                </aura:iteration>
            </tbody>
        </table>
        </lightning:card>   
    
    
    
</aura:component>