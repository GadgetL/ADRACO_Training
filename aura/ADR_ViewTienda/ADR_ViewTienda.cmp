<aura:component controller="ADR_Tienda" implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,force:lightningQuickAction" access="global" >
	
    <aura:attribute name="lstTienda" type="ADR_Tienda__c[]"/>
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    
    <lightning:card title="Tienda">
        <table>
            <thead>
                <tr>
                    <th><lightning:icon iconName="standard:avatar" alternativeText="Event" title="Event" />     Name</th>
                    <th><lightning:icon iconName="standard:call" alternativeText="Event" title="Event" />     Tipo</th>
                    <th><lightning:icon iconName="standard:link" alternativeText="Event" title="Event" />     Inauguracion</th>
                </tr>
            </thead>
            <tbody>
                <aura:iteration items="{!v.lstTienda}" var="objTienda">
                    <tr>
                        <td>{!objTienda.Name}</td>
                        <td>{!objTienda.ADR_Type__c}</td>
                        <td>{!objTienda.ADR_Fecha_Inauguration__c}</td>
                        
                    </tr>
                </aura:iteration>
            </tbody>
        </table>
        </lightning:card>
</aura:component>