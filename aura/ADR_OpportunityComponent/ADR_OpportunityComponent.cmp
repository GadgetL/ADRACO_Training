<aura:component controller="ADR_DisplayListOfOpportunity" implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,force:lightningQuickAction" access="global" >
	<!--Declaración de variables -->
    <aura:attribute name="lstOpportunities" type="List"/>
    <aura:attribute name="lstOppByName" type="List"/>
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    <!--Aquí va el diseño -->
    <aura:iteration items="{!v.lstOpportunities}" var="objOpp">
        <div class="slds-card">
        	<div class="slds-card__header slds-grid">
                <header class="slds-media slds-media_center slds-has-flexi-trunca">
                    <div class="slds-media__figure">
                        <span class="slds-icon_container slds-icon-standard-contact" title="Opportunity">    
                            <lightning:icon iconName="standard:opportunity" size="large" />
                        </span>
                    </div>
                    <div class="slds-media__body">
                        <h2 class="slds-card__header-title">
                            <div class="slds-card__header-link slds-truncate">
                                <span>{!objOpp.Name}</span>
                            </div>
                        </h2>
                    </div>
                </header>
            </div>
            <div class="slds-card__body">
                <table class="slds-table slds-table_cell-buffer slds-no-row-hover slds-table_bordered slds-table_fixed-layout" role="grid" aria-label="Contact Card">
                    <thead>
                        <tr class="slds-line-height_reset">
                            <th scope="row">
                                <lightning:icon iconName="utility:description" alternativeText="Description" title="Description"/>
                                <div class="slds-truncate" title="Description">Description</div>
                            </th>
                            <th scope="row">
                                <lightning:icon iconName="utility:type" alternativeText="Type" title="Type" />
                                <div class="slds-truncate" title="Type">Type</div>
                            </th>
                            <th scope="row">
                                <lightning:icon iconName="utility:stage" alternativeText="Stage Name" title="Stage Name" />
                                <div class="slds-truncate" title="Stage Name">Stage Name</div>
                            </th>
                            <th scope="row">
                                <lightning:icon iconName="standard:account" alternativeText="Account Name" title="Account Name" />
                                <div class="slds-truncate" title="Account Name">Account Name</div>
                            </th>
                            <th scope="row">
                                <lightning:icon iconName="utility:location" alternativeText="Account Site" title="Account Site" />
                                <div class="slds-truncate" title="Account Site">Account Site</div>
                            </th>
                            <th scope="row">
                                <lightning:icon iconName="utility:phone_portrait" alternativeText="Account Phone" title="Account Phone" />
                                <div class="slds-truncate" title="Account Phone">Account Phone</div>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="slds-hint-parent">
                            <th scope="row">{!objOpp.Descriptio}</th>
                            <th scope="row">{!objOpp.Type}</th>
                            <th scope="row">{!objOpp.StageName}</th>
                            <th scope="row">{!objOpp.Account.Name}</th>
                            <th scope="row">{!objOpp.Account.Site}</th>
                            <th scope="row">{!objOpp.Account.Phone}</th>
                         </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </aura:iteration>
    <aura:iteration items="{!v.lstOppByName}" var="objOppo">
        <div class="slds-card">
        	<div class="slds-card__header slds-grid">
                <header class="slds-media slds-media_center slds-has-flexi-trunca">
                    <div class="slds-media__figure">
                        <span class="slds-icon_container slds-icon-standard-contact" title="Opportunity">    
                            <lightning:icon iconName="standard:opportunity" size="large" />
                        </span>
                    </div>
                    <div class="slds-media__body">
                        <h2 class="slds-card__header-title">
                            <div class="slds-card__header-link slds-truncate">
                                <span>{!objOppo.Name}</span>
                            </div>
                        </h2>
                    </div>
                </header>
            </div>
            <div class="slds-card__body">
                <table class="slds-table slds-table_cell-buffer slds-no-row-hover slds-table_bordered slds-table_fixed-layout" role="grid" aria-label="Contact Card">
                    <thead>
                        <tr class="slds-line-height_reset">
                            <th scope="row">
                                <lightning:icon iconName="utility:description" alternativeText="Description" title="Description"/>
                                <div class="slds-truncate" title="Description">Description</div>
                            </th>
                            <th scope="col">
                                <lightning:icon iconName="utility:type" alternativeText="Type" title="Type" />
                                <div class="slds-truncate" title="Type">Type</div>
                            </th>
                            <th scope="col">
                                <lightning:icon iconName="utility:stage" alternativeText="Stage Name" title="Stage Name" />
                                <div class="slds-truncate" title="Stage Name">Stage Name</div>
                            </th>
                            <th scope="col">
                                <lightning:icon iconName="standard:account" alternativeText="Account Name" title="Account Name" />
                                <div class="slds-truncate" title="Account Name">Account Name</div>
                            </th>
                            <th scope="col">
                                <lightning:icon iconName="utility:location" alternativeText="Account Site" title="Account Site" />
                                <div class="slds-truncate" title="Account Site">Account Site</div>
                            </th>
                            <th scope="col">
                                <lightning:icon iconName="utility:phone_portrait" alternativeText="Account Phone" title="Account Phone" />
                                <div class="slds-truncate" title="Account Phone">Account Phone</div>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="slds-hint-parent">
                            <th scope="row">{!objOppo.Descriptio}</th>
                            <th scope="row">{!objOppo.Type}</th>
                            <th scope="row">{!objOppo.StageName}</th>
                            <th scope="row">{!objOppo.Account.Name}</th>
                            <th scope="row">{!objOppo.Account.Site}</th>
                            <th scope="row">{!objOppo.Account.Phone}</th>
                         </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </aura:iteration>
</aura:component>