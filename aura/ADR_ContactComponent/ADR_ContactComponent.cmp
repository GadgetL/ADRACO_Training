<aura:component controller="ADR_DisplayListofContact" implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,force:lightningQuickAction" access="global" >
	
    <aura:attribute name="lstContact" type="List"/>
    
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    
    <div>
    <table class="slds-table slds-table_cell-buffer slds-table_bordered slds-table_col-bordered" aria-label="Example table of Opportunities with vertical borders">
         <thead>
        	<tr>
            	
                <th scope="col" > <span class="slds-truncate"> Email</span></th>
                
                
                <th scope="col" > <span class="slds-truncate"> Last Name</span></th>
            </tr>        
         </thead>
         <tbody>
            <aura:iteration items="{!v.lstContact}" var="objContact">
             <tr>
             	
                <td>{!objContact.Email}</td>  
                
                
                <td>{!objContact.LastName}</td> 
             </tr>
            </aura:iteration>
         </tbody>
       </table>
    </div>
    
</aura:component>