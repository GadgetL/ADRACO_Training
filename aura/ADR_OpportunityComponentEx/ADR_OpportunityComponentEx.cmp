<aura:component controller = "opplist" implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction" access="global" >
    <aura:attribute name="opportunities" type="list"/>
      <aura:attribute name="opportunities2" type="list"/>
    <aura:handler name="init" value="{!this}" action="{!c.doinit}"/>
    <table class="slds-table slds-table--bordered slds-table--striped slds-table--cell-buffer slds-table--fixed-layout">
        <thead>
            <tr class="slds-text-heading--label">
                <th scope="col"><div class="slds-truncate" title="ID">ID</div></th>
                <th scope="col"><div class="slds-truncate" title="Name">Name</div></th>
                <th scope="col"><div class="slds-truncate" title="Description">Description</div></th>
                <th scope="col"><div class="slds-truncate" title="Stage">Stage</div></th>
                <th scope="col"><div class="slds-truncate" title="Type">Type</div></th>
                <th scope="col"><div class="slds-truncate" title="Account_Name">Account Name</div></th>
                <th scope="col"><div class="slds-truncate" title="Account_Name">Account Site</div></th>
                <th scope="col"><div class="slds-truncate" title="Phone">Phone</div></th>
            </tr>
        </thead>
        <tbody>
            <aura:iteration items="{!v.opportunities}" var ="x">
                <tr>
                    <th scope="row"><div class="slds-truncate" title="{!x.Id}">{!x.Id}</div></th>
                    <td><div class="slds-truncate" title="{!x.Name}">{!x.Name}</div></td>
                    <td><div class="slds-truncate" title="{!x.Description}">{!x.Description}</div></td>
                    <td><div class="slds-truncate" title="{!x.Stage}">{!x.StageName}</div></td>
                    <td><div class="slds-truncate" title="{!x.Type}">{!x.Type}</div></td>
                    <td><div class="slds-truncate" title="{!x.AccountId.Name}">{!x.Account.Name}</div></td>
                    <td><div class="slds-truncate" title="{!x.AccountId.Site}">{!x.Account.Site}</div></td>
                    <td><div class="slds-truncate" title="{!x.AccountId.Phone}">{!x.Account.Phone}</div></td>
                </tr>
            </aura:iteration>    
            <aura:iteration items="{!v.opportunities2}" var ="x">
                <tr>
                    <th scope="row"><div class="slds-truncate" title="{!x.Id}">{!x.Id}</div></th>
                    <td><div class="slds-truncate" title="{!x.Name}">{!x.Name}</div></td>
                    <td><div class="slds-truncate" title="{!x.Description}">{!x.Description}</div></td>
                    <td><div class="slds-truncate" title="{!x.Stage}">{!x.StageName}</div></td>
                    <td><div class="slds-truncate" title="{!x.Type}">{!x.Type}</div></td>
                    <td><div class="slds-truncate" title="{!x.AccountId.Name}">{!x.Account.Name}</div></td>
                    <td><div class="slds-truncate" title="{!x.AccountId.Site}">{!x.Account.Site}</div></td>
                    <td><div class="slds-truncate" title="{!x.AccountId.Phone}">{!x.Account.Phone}</div></td>
                </tr>
            </aura:iteration>      
        </tbody>
    </table>
    
</aura:component>