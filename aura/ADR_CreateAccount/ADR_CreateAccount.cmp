<aura:component controller="ADR_AccountInsertAndDisplay" implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,force:lightningQuickAction" access="global" >
	<aura:attribute name="objAccount" type="Account" default="{'objectType': 'Account',
                                                             'Name': '',
                                                             'AccountNumber':'',
                                                             'Phone':'',
                                                             'Website':''}"></aura:attribute>	
	<aura:attribute name='lstAccount' type= "Account[]"></aura:attribute>
	<aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    <lightning:card title="Create a new Account">
        <lightning:input name="accName" label="Account Name" value="{!v.objAccount.Name}"/>
        <lightning:input name="accAccountNumber" label="Account Number" value="{!v.objAccount.AccountNumber}"/>
        <lightning:input name="accPhone" label="Phone" value="{!v.objAccount.Phone}"/>
        <lightning:input name="accWebsite" label="WebSite" value="{!v.objAccount.Website}"/>
        <lightning:button variant="brand" label="Create Account" onclick="{!c.CreateNewAccount}"/>
    </lightning:card>
	<lightning:card title="Accounts">
    	<table class="slds-table slds-table_cell-buffer slds-table_bordered slds-table_striped">
        <thead>
            
            	<tr>
                    <th scopoe="col"><span class="slds-truncate">Name</span></th>
                    <th scopoe="col"><span class="slds-truncate">Phone</span></th>
                    <th scopoe="col"><span class="slds-truncate">Website</span></th>
            		<th scopoe="col"><span class="slds-truncate">Account Number</span></th>

                </tr>
            </thead>
            <tbody>
            	<aura:iteration items="{!v.lstAccount}" var="objAccount">
                	<tr >
                 	   <td>{!objAccount.Name}</td>
                	    <td>{!objAccount.Phone}</td>
                    	<td>{!objAccount.Website}</td>
                        <td>{!objAccount.AccountNumber}</td>
                    </tr>
                
                </aura:iteration>
        </tbody>
        </table>
       
    </lightning:card>
    
    
    
		

</aura:component>