<aura:component controller="ADR_AccountInsertAndDisplay" implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction" access="global" >
	<aura:attribute name="objAccount" type="Account" default="{'sobjectType': 'Account',
                                                              'Name': '',
                                                              'AccountNumber': '',
                                                              'Phone': '',
                                                              'Website': ''}"/>
    <aura:attribute name="lstAccount" type="Account[]"/>
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
   
        <lightning:card	 class="createContact" title="Create Account"> 
        
        <lightning:input name="accName" label="Account Names" value="{!v.objAccount.Name}" placeholder="e.g. Example"/>
        <lightning:input name="accAccountNumber" label="Account Number" value="{!v.objAccount.AccountNumber}" placeholder ="e.g. 556612"/>
        <lightning:input name="accPhone" label="Account Phone" value="{!v.objAccount.Phone}" placeholder ="e.g. 5581349032"/>
        <lightning:input name="accWebsite" label="Account Website" value="{!v.objAccount.Website}" placeholder="e.g. www.example.com"/>
        <br/>
        <lightning:button variant="brand" label="Save Account" onclick="{!c.createNewAccount}"/>
    </lightning:card>
   
    
    <lightning:card iconName="standard:account" title="Accounts">
        <table>
            <thead>
                <tr>
                    <th><lightning:icon iconName="standard:avatar" alternativeText="Event" title="Event" />     Name</th>
                    <th><lightning:icon iconName="standard:call" alternativeText="Event" title="Event" />     Phone</th>
                    <th><lightning:icon iconName="standard:link" alternativeText="Event" title="Event" />     WebSite</th>
                    <th><lightning:icon iconName="standard:employee_contact" alternativeText="Event" title="Event" />     Account Number</th>
                </tr>
            </thead>
            <tbody>
                <aura:iteration items="{!v.lstAccount}" var="objAccount">
                    <tr>
                        <td>{!objAccount.Name}</td>
                        <td>{!objAccount.Phone}</td>
                        <td>{!objAccount.Website}</td>
                        <td>{!objAccount.AccountNumber}</td>
                    </tr>
                </aura:iteration>
            </tbody>
        </table>
        </lightning:card>                                 
</aura:component>