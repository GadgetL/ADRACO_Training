<aura:component controller="ADR_OpportunityInsertAndDisplay" implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction" access="global" >
<aura:attribute name="objOpportunity" type="Opportunity" default="{'sobjectType': 'Opportunity',
                                                              'Name': '',
                                                              'Description': '',
                                                              'Probability': '',
                                                              'FiscalYear': '',
                                                              'CloseDate': '',
                                                              'StageName': ''}"/>
    <aura:attribute name="lstOpportunity" type="Opportunity[]"/>
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
   
        <lightning:card	 iconName="standard:opportunity" title="Create Opportunity"> 
        
        <lightning:input name="oppName" label="Opportunity Name" value="{!v.objOpportunity.Name}" placeholder="e.g. Example"/>
        <lightning:input name="oppDescription" label="Description" value="{!v.objOpportunity.Description}" placeholder ="e.g. Test Description"/>
        <lightning:input name="oppProbability" label="Probability" value="{!v.objOpportunity.Probability}" placeholder ="e.g. 10"/>
        <lightning:input name="oppFiscalYear" label="Fiscal Year" value="{!v.objOpportunity.FiscalYear}" placeholder="e.g. 2001"/>
            <lightning:input type="date" name="oppFiscalYear" label="Close Date" value="{!v.objOpportunity.CloseDate}" />
            
            <label>Stage</label>
             <force:inputField value="{!v.objOpportunity.StageName}"/>
        <br/>
        <lightning:button variant="brand" label="Create Opportunity" onclick="{!c.createNewOpportunity}"/>
    </lightning:card>
   
    
    <lightning:card iconName="standard:opportunity" title="Opportunity">
        <table>
            <thead>
                <tr>
                    <th><lightning:icon class="iconCon" iconName="utility:identity" alternativeText="Connected" title="Connected" />    Name</th>
                    <th><lightning:icon class="iconCon" iconName="utility:display_text" alternativeText="Connected" title="Connected" />     Description</th>
                    <th><lightning:icon class="iconCon" iconName="utility:percent" alternativeText="Connected" title="Connected" />     Probability</th>
                    <th>     Fiscal Year </th>
                    <th><lightning:icon class="iconCon" iconName="utility:dayview" alternativeText="Connected" title="Connected" />     Close Date </th>
                    <th><lightning:icon class="iconCon" iconName="utility:picklist_type" alternativeText="Connected" title="Connected" />     StageName </th>
                </tr>
            </thead>
            <tbody>
                <aura:iteration items="{!v.lstOpportunity}" var="objOpportunity">
                    <tr>
                        <td>{!objOpportunity.Name}</td>
                        <td>{!objOpportunity.Description}</td>
                        <td>{!objOpportunity.Probability}</td>
                        <td>{!objOpportunity.FiscalYear}</td>
                        <td>{!objOpportunity.CloseDate}</td>
                        <td>{!objOpportunity.StageName}</td>
                    </tr>
                </aura:iteration>
            </tbody>
        </table>
        </lightning:card>     	
</aura:component>