<aura:component controller = "ADR_CreateAndDisplayOppoInformation" implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction" access="global" >
	<aura:attribute name="objOpportunity" type="Opportunity" default="{'sobjectType': 'Opportunity', 
                                                              'Name': '',
                                                              'StageName' : '',
                                                              'CloseDate': '',
                                                              'Type': ''}"/>
    <aura:attribute name="lstOpportunity" type="List"/>
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    
    <lightning:card title="Create new Opportunity" class="slds-has-dividers_bottom-space slds-p-horizontal_small" footer="Card Footer">
        <lightning:input name="accOpportName " value="{!v.objOpportunity.Name}" required="true" label="Opportunity Name" placeholder="Opportunity name"/>
        <label required="true">Stage</label>
        <force:inputField aura:id="StageName" value="{!v.objOpportunity.StageName}" required="true"/>
        <lightning:input name="accCloseDate " value="{!v.objOpportunity.CloseDate}" type="date" required="true" label="Close Date" placeholder="09/06/2022"/>
        <label>Type</label>
        <force:inputField aura:id="accType " value="{!v.objOpportunity.Type}"/>
        <th class="slds-p-vertical_small">
            <lightning:button variant="brand" label="Create Opportunity" onclick="{!c.createOpportunity}" class="slds-m-left_x-small"/>
        </th>
    </lightning:card>
    
    <thead class="slds-align_absolute-center" style=" height: 50px">
        <lightning:icon iconName="standard:opportunity" alternativeText="opportunity" title="opportunity" size="large"/>
        <tt style=" font-size: 30px; padding:10px ">OPPORTUNITY LIST</tt>
    </thead>
    <div>
        <table class="slds-table slds-table--bordered slds-table--striped">
            <thead class="slds-text-heading_medium" style="height: 40px; width:40px font-size: 10px;">
                <tr>
                    <th scope="col" style="color: darkred; border-width: 5px;border-style:inset; text-align: center; border-color: rgb(204, 0, 51);background-color: rgb(51, 255, 255);" >
                        <lightning:icon iconName="utility:user" alternativeText="User"  title="User" style="color:darkred;"/>
                        <span class="slds-truncate" style="padding:10px">Name</span>
                    </th>
                    <th scope="col" style="color: darkgreen; border-width: 5px;border-style: inset; text-align: center; border-color: darkgreen;background-color:rgb(227, 252, 191);">
                        <lightning:icon iconName="standard:stage_collection" alternativeText="Stage" title="Stage variant"/>
                        <span class="slds-truncate" style="padding:10px">Stage </span>
                    </th>
                    <th scope="col" style="color: purple; border-width: 5px;border-style: inset; text-align: center; border-color: purple;background-color: rgb(102, 204, 102);">
                        <lightning:icon iconName="standard:shift_type" alternativeText="Type"  title="Type variant"/>
                        <span class="slds-truncate" style="padding:10px">Type</span>
                    </th> 
                    <th scope="col" style="color: rgb(46, 2, 73); border-width: 5px;border-style: inset; text-align: center; border-color: rgb(46, 2, 73);background-color: rgb(248, 6, 204);">
                        <lightning:icon iconName="standard:address" alternativeText="Site"  title="Site variant"/>
                        <span class="slds-truncate" style="padding:10px">Account Name</span>
                    </th>
                    <th scope="col" style="color: orange; border-width: 5px;border-style: inset; text-align: center; border-color: orange;background-color: rgb(51, 51, 255);">
                        <lightning:icon iconName="standard:event" alternativeText="Date"  title="Date"/>
                        <span class="slds-truncate" style="padding:10px">CloseDate</span>
                    </th>
                </tr>
            </thead>
            <tbody>
                <aura:iteration items="{!v.lstOpportunity}" var="objOpportunity">
                    <tr style ="font-size: 15px;">
                        <td style="border-width: 3px;border-style: none none groove; text-align: center; border-color: rgb(204, 0, 51);">{!objOpportunity.Name}</td>
                        <td style="border-width: 3px;border-style: none none groove; text-align: center; border-color: darkgreen;">{!objOpportunity.StageName}</td>
                        <td style="border-width: 3px;border-style: none none groove; text-align: center; border-color: purple;">{!objOpportunity.Type}</td>
                        <td style="border-width: 3px;border-style: none none groove; text-align: center; border-color: rgb(248, 6, 204);">{!objOpportunity.Account.Name}</td>
                        <td style="border-width: 3px;border-style: none none groove; text-align: center; border-color: orange;">{!objOpportunity.CloseDate}</td>
                    </tr>
                </aura:iteration>
            </tbody>
        </table>
    </div>
</aura:component>