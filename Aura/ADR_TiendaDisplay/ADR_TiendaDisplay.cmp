<aura:component controller = "ADR_DisplayTienda" implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,force:lightningQuickAction" access="global" >
	<aura:attribute name="lstTiendas" type="ADR_Tienda__c[]"/>
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    
     <thead class="slds-align_absolute-center" style=" height: 50px">
        <tt style=" font-size: 30px">TIENDA LIST</tt>
    </thead>
    
    <lightning:card>
        <table class="slds-table slds-table--bordered slds-table--striped">
            <thead class="slds-text-heading_medium" style="height: 40px; width:20px font-size: 10px;">
                <tr>
                    <th scope="col" style="color: darkred; border-width: 5px;border-style: inset; text-align: center; border-color: rgb(238, 228, 171);background-color:rgb(185, 248, 211);">
                        <lightning:icon iconName="utility:user" alternativeText="User"  title="User" size="small"/>
                        <span class="slds-truncate" style="padding:10px">Name</span>
                    </th>
                    <th scope="col" style="color: rgb(151, 114, 251); border-width: 5px;border-style: inset; text-align: center; border-color:rgb(243, 36, 36);background-color: #CDF0EA;">
                        <lightning:icon iconName="utility:type" alternativeText="Type"  title="Type" size="small"/>
                        <span class="slds-truncate" style="padding:10px">Tienda Type</span>
                    </th>
                    <th scope="col" style="color: #D61C4E; border-width: 5px;border-style: inset; text-align: center; border-color:rgb(64, 223, 239);background-color: rgb(104, 167, 173);">
                        <lightning:icon iconName="standard:event" alternativeText="Fecha inaguracion"  title="Fecha inaguracion" size="small"/>
                        <span class="slds-truncate" style="padding:10px">Fecha de inaguracion</span>
                    </th>
                </tr>
            </thead>
            <tbody>
                <aura:iteration items="{!v.lstTiendas}" var="ADR_Tienda__c">
                    <tr>
                        <td style="border-width: 2px;border-style: none none groove; text-align: center; border-color: rgb(238, 228, 171);">{!ADR_Tienda__c.Name}</td>
                        <td style="border-width: 2px;border-style: none none groove; text-align: center; border-color: rgb(243, 36, 36);">{!ADR_Tienda__c.ADR_Type__c}</td>
                        <td style="border-width: 2px;border-style: none none groove; text-align: center; border-color: rgb(64, 223, 239);color: #D61C4E;">{!ADR_Tienda__c.ADR_Fecha_inaguracion__c}</td>
                    </tr>
                </aura:iteration>
            </tbody>
        </table>
    </lightning:card>
</aura:component>